---
import { Image } from "astro:assets";

import cozyBadge from "../assets/available/git/cozy.svg";
import cozyMinimalBadge from "../assets/available/git/cozy-minimal.svg";
import compactBadge from "../assets/available/git/compact.svg";
import compactMinimalBadge from "../assets/available/git/compact-minimal.svg";
---

<div class="mb-6">
	<h2 class="text-2xl font-bold text-zinc-800 dark:text-zinc-100 mb-4">Badge Types</h2>
	<p class="text-zinc-600 dark:text-zinc-400 mb-6">Choose from four different badge styles to match your project's aesthetic</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
	<a href={`${import.meta.env.BASE_URL}/cozy`} class="group block bg-white dark:bg-zinc-800 rounded-lg p-5 border border-zinc-200 dark:border-zinc-700 hover:border-blue-400 dark:hover:border-blue-600 transition-all hover:shadow-md">
		<div class="flex items-center gap-4 mb-3">
			<Image src={cozyBadge} alt="A cozy badge" class="w-auto" />
		</div>
		<h3 class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-1 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">Cozy</h3>
		<p class="text-sm text-zinc-600 dark:text-zinc-400">Large two-line badges with maximum visibility</p>
	</a>
	
	<a href={`${import.meta.env.BASE_URL}/compact`} class="group block bg-white dark:bg-zinc-800 rounded-lg p-5 border border-zinc-200 dark:border-zinc-700 hover:border-blue-400 dark:hover:border-blue-600 transition-all hover:shadow-md">
		<div class="flex items-center gap-4 mb-3">
			<Image src={compactBadge} alt="A compact badge" class="w-auto" />
		</div>
		<h3 class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-1 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">Compact</h3>
		<p class="text-sm text-zinc-600 dark:text-zinc-400">Single-line badges that save vertical space</p>
	</a>
	
	<a href={`${import.meta.env.BASE_URL}/cozy-minimal`} class="group block bg-white dark:bg-zinc-800 rounded-lg p-5 border border-zinc-200 dark:border-zinc-700 hover:border-blue-400 dark:hover:border-blue-600 transition-all hover:shadow-md">
		<div class="flex items-center gap-4 mb-3">
			<Image src={cozyMinimalBadge} alt="A cozy-minimal badge" class="w-auto" />
		</div>
		<h3 class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-1 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">Cozy Minimal</h3>
		<p class="text-sm text-zinc-600 dark:text-zinc-400">Icon-only badges with larger size for emphasis</p>
	</a>
	
	<a href={`${import.meta.env.BASE_URL}/compact-minimal`} class="group block bg-white dark:bg-zinc-800 rounded-lg p-5 border border-zinc-200 dark:border-zinc-700 hover:border-blue-400 dark:hover:border-blue-600 transition-all hover:shadow-md">
		<div class="flex items-center gap-4 mb-3">
			<Image src={compactMinimalBadge} alt="A compact-minimal badge" class="w-auto" />
		</div>
		<h3 class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-1 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">Compact Minimal</h3>
		<p class="text-sm text-zinc-600 dark:text-zinc-400">Small icon-only badges for subtle branding</p>
	</a>
</div>
