---
import BadgeTypes from "../components/BadgeTypes.astro";
import SearchBarHome from "../components/SearchBarHome.astro";
import PageLayout from "../layouts/Base.astro"
import { assets, badges } from "../utils/badges";
---

<PageLayout meta={{ title: "Home" }}>
	<!-- Hero Section -->
	<section class="mb-12">
		<div class="text-center mb-8">
			<h1 class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
				Devin's Badges
			</h1>
			<p class="text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">
				Fancy, customizable badges for your projects. Available in multiple formats and styles.
			</p>
		</div>
		<SearchBarHome />
	</section>

	<!-- Stats Section -->
	<section class="mb-12">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			<div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg p-6 border border-blue-200 dark:border-blue-800">
				<div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">{assets.length}</div>
				<div class="text-sm font-medium text-zinc-700 dark:text-zinc-300">Unique Badges</div>
			</div>
			<div class="bg-gradient-to-br from-indigo-50 to-indigo-100 dark:from-indigo-900/20 dark:to-indigo-800/20 rounded-lg p-6 border border-indigo-200 dark:border-indigo-800">
				<div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">{badges.length}</div>
				<div class="text-sm font-medium text-zinc-700 dark:text-zinc-300">Total Variants (Sizes & Formats)</div>
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section class="mb-12">
		<div class="bg-zinc-50 dark:bg-zinc-800/50 rounded-lg p-6 border border-zinc-200 dark:border-zinc-700">
			<h2 class="text-2xl font-bold text-zinc-800 dark:text-zinc-100 mb-4">About</h2>
			<p class="text-base text-zinc-700 dark:text-zinc-300 leading-relaxed">
				This is a fork of a <a href="https://github.com/PenPow/Badges" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300 underline underline-offset-2 font-medium">fork</a> of <a href="https://intergrav.github.io/devins-badges-docs/" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300 underline underline-offset-2 font-medium">Devin's Badges</a> to continue maintaining and adding fancy badges that appeal to non-technical users. All badges are available in multiple formats including SVG, PNG, and WebP, with four different style variants to match your project's aesthetic.
			</p>
		</div>
	</section>

	<!-- Badge Types Section -->
	<section class="mb-12">
		<BadgeTypes />
	</section>

	<!-- Contributing Section -->
	<section class="mb-8">
		<div class="bg-gradient-to-r from-blue-50 via-indigo-50 to-purple-50 dark:from-zinc-800 dark:via-zinc-800 dark:to-zinc-800 rounded-lg p-6 border border-blue-200 dark:border-zinc-700">
			<h2 class="text-2xl font-bold text-zinc-800 dark:text-zinc-100 mb-3">Contributing</h2>
			<p class="text-base text-zinc-700 dark:text-zinc-300 mb-4 leading-relaxed">
				We welcome contributions! Whether you want to add new badges, improve existing ones, or fix bugs, your help is appreciated.
			</p>
			<a href={`${import.meta.env.BASE_URL}/contributing`} class="inline-block px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-colors shadow-sm">
				View Contributing Guide
			</a>
		</div>
	</section>
</PageLayout>
